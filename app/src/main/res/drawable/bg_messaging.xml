<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/messaging_input"/>

            <stroke android:width="1dp" android:color="@color/actionBar"/>

            <corners android:radius="@dimen/messaging_input_radius"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/messaging_input"/>

            <stroke android:width="1dp" android:color="@color/actionBar"/>

            <corners android:radius="@dimen/messaging_input_radius"/>
        </shape>
    </item>

</selector>