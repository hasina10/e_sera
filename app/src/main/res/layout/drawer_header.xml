<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <RelativeLayout

            android:id="@+id/containerDrawerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryColor">

            <ImageView
                android:id="@+id/profileCover"
                android:layout_width="@dimen/nav_dr"
                android:layout_height="164dp"
                android:layout_marginTop="@dimen/drawer_margin_top"
                android:scaleType="centerCrop"
                android:src="@drawable/header"/>

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="64dp"/>

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profilePic"
                android:layout_marginLeft="16dp"
                android:text="Ben Cherif"
                android:textColor="@color/accentColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/userJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_marginLeft="16dp"
                android:text="+212 633-854754"

                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primaryColorDark"/>
    </LinearLayout>