<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/messages_item"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingTop="10dp">

    <TextView
        android:id="@+id/message_sender"
        style="@style/head_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medMe"
        android:textColor="@color/outgoing_message"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/message_delimter"
            android:layout_width="@dimen/message_delimter_width"
            android:layout_height="match_parent"
            android:background="@color/outgoing_message"/>

        <TextView
            android:id="@+id/message_text"
            style="@style/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/medMessage"
            android:textColor="@color/ColorPrimaryText"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>